CREATE DATABASE zesolutions_db;

USE zesolutions_db;

CREATE TABLE bookings (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100),
    phone VARCHAR(20),
    email VARCHAR(100),
    division VARCHAR(100),
    task_type VARCHAR(100),
    address TEXT,
    description TEXT,
    preferred_date DATE,
    budget VARCHAR(50),
    contact_method VARCHAR(20),
    submitted_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);
